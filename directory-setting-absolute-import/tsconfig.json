{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": false,

    // https://nextjs.org/docs/advanced-features/module-path-aliases
    "baseUrl": ".",

    // til.hashrocket.com/posts/lmnsdtce3y-import-absolute-paths-in-typescript-jest-tests
    "paths": {
      "src/*": ["src/*"],
    }
  },
  "include": [
    "next-env.d.ts",
    ".eslintrc.js",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
